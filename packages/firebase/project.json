{
  "name": "firebase",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/firebase/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/firebase",
        "main": "packages/firebase/src/index.ts",
        "tsConfig": "packages/firebase/tsconfig.lib.json",
        "assets": [
          "packages/firebase/package.json",
          "packages/firebase/*.md",
          {
            "input": "./packages/firebase/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/firebase/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/firebase",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/firebase",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/firebase/jest.config.ts"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "tagPrefix": "firebase@",
        "versionTagPrefix": "v"
      }
    }
  }
}