{
  "$schema": "http://json-schema.org/schema",
  "$id": "Firebase",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    },
    "directory": {
      "type": "string",
      "description": "A directory where the project is placed",
      "alias": "d"
    },
    "codebase": {
      "type": "string",
      "description": "Firebase functions codebase",
      "default": "default"
    },
    "nodeVersion": {
      "type": [
        "string",
        "number"
      ],
      "description": "Firebase functions node runtime version e.g. 14, 16, 18, 20 or 22",
      "default": "20",
      "enum": [
        "14",
        "16",
        "18",
        "20",
        "22",
        14,
        16,
        18,
        20,
        22
      ],
      "x-prompt": {
        "message": "What node runtime version would you like to use?",
        "type": "list",
        "items": [
          {
            "value": "14",
            "label": "Node 14 (deprecated)"
          },
          {
            "value": "16",
            "label": "Node 16 (deprecated)"
          },
          {
            "value": "18",
            "label": "Node 18"
          },
          {
            "value": "20",
            "label": "Node 20"
          },
          {
            "value": "22",
            "label": "Node 22 (preview)"
          }
        ]
      }
    },
    "genkit": {
      "type": "boolean",
      "description": "Add Firebase Genkit support with developer UI",
      "default": false,
      "x-prompt": "Would you like to add Firebase Genkit support?"
    }
  },
  "required": [
    "name"
  ]
}