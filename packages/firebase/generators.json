{
  "$schema": "http://json-schema.org/schema",
  "name": "firebase",
  "version": "0.0.1",
  "generators": {
    "functions": {
      "factory": "./src/generators/functions/generator",
      "schema": "./src/generators/functions/schema.json",
      "description": "firebase functions generator"
    },
    "functions-python": {
      "factory": "./src/generators/functions-python/generator",
      "schema": "./src/generators/functions-python/schema.json",
      "description": "Generate Firebase Cloud Functions using Python runtime"
    },
    "hosting": {
      "factory": "./src/generators/hosting/generator",
      "schema": "./src/generators/hosting/schema.json",
      "description": "Configure Firebase Hosting for static sites with optional SSR support (EXPERIMENTAL)"
    }
  }
}